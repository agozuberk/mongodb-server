version: '3'
services:
    mongodb-server:
        image: mongodb-server
        environment:
            - SPRING_DATA_MONGODB_HOST=0.0.0.0
            - SPRING_DATA_MONGODB_PORT=28017
        ports:
            - 8090:8090
        links:
            - mongodb
        depends_on:
            - mongodb
        networks:
            - server-net
    mongodb:
        image: mongo:latest
        container_name: "mongodb"
        environment:
          - MONGO_DATA_DIR=/data/db
          - MONGO_LOG_DIR=/dev/null
        volumes:
          - ./data/db:/data/db
        ports:
            - 28017:28017
        networks:
            - server-net

networks:
  server-net:
